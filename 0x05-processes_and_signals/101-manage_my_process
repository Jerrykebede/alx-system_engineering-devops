#!/bin/bash

# Path to the manage_my_process script
MANAGE_SCRIPT="/path/to/manage_my_process"

# PID file location
PID_FILE="/var/run/my_process.pid"

# Function to start manage_my_process
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
    else
        # Start manage_my_process in the background
        $MANAGE_SCRIPT &
        # Store its PID
        echo $! > "$PID_FILE"
        echo "manage_my_process started."
    fi
}

# Function to stop manage_my_process
stop() {
    if [ -f "$PID_FILE" ]; then
        # Read PID from PID_FILE
        PID=$(cat "$PID_FILE")
        # Kill the process
        kill $PID && rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process is not running."
    fi
}

# Function to restart manage_my_process
restart() {
    if [ -f "$PID_FILE" ]; then
        stop
    fi
    start
    echo "manage_my_process restarted."
}

# Main logic to handle arguments
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
