#!/bin/bash

# Define paths and commands
MANAGE_SCRIPT="/path/to/manage_my_process"
PID_FILE="/var/run/my_process.pid"

# Function to start the manage_my_process script
start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
    else
        # Start the manage_my_process script as a background process
        $MANAGE_SCRIPT &
        # Get its PID and store it in the PID file
        echo $! > "$PID_FILE"
        echo "manage_my_process started."
    fi
}

# Function to stop the manage_my_process script
stop() {
    if [ -f "$PID_FILE" ]; then
        # Read PID from PID_FILE
        PID=$(cat "$PID_FILE")
        # Kill the process and remove PID file
        kill $PID && rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process is not running."
    fi
}

# Function to restart the manage_my_process script
restart() {
    if [ -f "$PID_FILE" ]; then
        stop
    fi
    start
    echo "manage_my_process restarted."
}

# Main logic to handle arguments
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
